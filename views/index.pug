doctype html
html
  head
    title Simple Calculator
    link(rel='stylesheet', href='/style.css')
  body
    .container
      h1 Simple Calculator
      form(action='/result', method='post')
        input(type='number', name='num1', placeholder='Number 1', required)
        select(name='operation', required)
          option(value='add') Add
          option(value='subtract') Subtract
          option(value='multiply') Multiply
          option(value='divide') Divide
        input(type='number', name='num2', placeholder='Number 2', required)
        button(type='submit') Calculate

        
